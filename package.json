{
  "name": "react-github-data",
  "version": "1.0.0",
  "description": "A collection of GitHub components to easily display basic information about a GitHub user or repository.",
  "author": "Joery Droppers",
  "repository": {
    "type": "git",
    "url": "https://github.com/Droppers/react-github-data.git"
  },
  "keywords": [
