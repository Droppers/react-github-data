    "eslint-plugin-react-hooks": "^4.2.0",
    "rimraf": "^3.0.2",
    "typescript": "^4.3.4"
  },
  "dependencies": {
    "classnames": "^2.3.1",
    "react-hooks-global-state": "^1.0.1"
